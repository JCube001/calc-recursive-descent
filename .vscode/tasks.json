{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "process",
            "command": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "args": [
                "-G",
                "\"Ninja\""
            ],
            "windows": {
                "args": [
                    "-G",
                    "\"Visual Studio 15 2017 Win64\"",
                    ".."
                ]
            }
        },
        {
            "label": "Build (Default)",
            "type": "process",
            "command": "cmake",
            "args": [
                "--build",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (Debug)",
            "type": "process",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build"
        },
        {
            "label": "Build (Release)",
            "type": "process",
            "command": "cmake",
            "args": [
                "--build",
                ".",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build"
        },
        {
            "label": "Test (Debug)",
            "type": "process",
            "command": "ctest",
            "args": [
                "-C",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build (Debug)"
            ]
        },
        {
            "label": "Test (Release)",
            "type": "process",
            "command": "ctest",
            "args": [
                "-C",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "test",
            "dependsOn": [
                "Build (Release)"
            ]
        }
    ]
}
